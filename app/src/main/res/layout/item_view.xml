<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_item_view_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:padding="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/profile_pic_item_view"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/profile_pic" />
            <ImageView
                android:contentDescription="play_button"
                android:id="@+id/playbuttonInlist"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:onClick="clickToPlay"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="45dp"
                android:layout_toEndOf="@+id/profile_pic_item_view"
                android:src="@drawable/play" />
            <ImageView
                android:id="@+id/soundwave_item_view"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@+id/playbuttonInlist"
                android:src="@drawable/soundwave" />
            <ImageView
                android:id="@+id/like_button_item_view"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@id/soundwave_item_view"
                android:src="@drawable/like" />
            <ImageView
                android:id="@+id/microphone_item_view"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/like_button_item_view"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@id/soundwave_item_view"
                android:src="@drawable/microphone" />
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/soundwave_item_view"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="40dp"
                android:text="Name"
                android:textSize="30sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
